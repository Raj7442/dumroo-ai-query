import pandas as pd
from datetime import datetime, timedelta
from langchain.chat_models import ChatOpenAI
from langchain.prompts import PromptTemplate
from langchain.chains import LLMChain
import json

data = {
    "student_name": ["Aditi Sharma", "Rohan Patel", "Kavya Mehta", "Aarav Verma", "Priya Iyer"],
    "grade": [8, 8, 8, 9, 9],
    "class": ["A", "A", "B", "A", "A"],
    "region": ["North", "North", "North", "South", "South"],
    "homework_submitted": ["No", "Yes", "No", "Yes", "No"],
    "quiz_score": [78, 88, 92, 81, 69],
    "quiz_date": ["2025-11-08", "2025-11-08", "2025-11-08", "2025-11-07", "2025-11-07"],
    "next_quiz_date": ["2025-11-14", "2025-11-14", "2025-11-16", "2025-11-15", "2025-11-15"]
}

df = pd.DataFrame(data)

current_admin = {
    "name": "Mrs. Joshi",
    "grade": 8,
    "region": "North"
}

llm = ChatOpenAI(model="gpt-4-turbo", temperature=0)

prompt = PromptTemplate(
    input_variables=["query"],
    template="""
You are an AI data query parser for a school admin panel.
Analyze the user query and identify:
1. intent type: one of [homework_status, performance, quiz_schedule]
2. any time frame (e.g., "last week", "next week")
3. data filters (grade/class)
Return as JSON.

User query: {query}
"""
)

parser_chain = LLMChain(llm=llm, prompt=prompt)

def filter_data(df, admin_scope, parsed):
    data = df.copy()
    data = data[(data["grade"] == admin_scope["grade"]) & (data["region"] == admin_scope["region"])]
    intent = parsed.get("intent type", "").lower()
    if "homework" in intent:
        data = data[data["homework_submitted"] == "No"]
        return data[["student_name", "grade", "class", "homework_submitted"]]
    elif "performance" in intent:
        return data[["student_name", "grade", "quiz_score", "quiz_date"]]
    elif "quiz" in intent:
        today = datetime.today()
        next_week = today + timedelta(days=7)
        data["next_quiz_date"] = pd.to_datetime(data["next_quiz_date"])
        data = data[data["next_quiz_date"].between(today, next_week)]
        return data[["student_name", "grade", "next_quiz_date"]]
    else:
        return pd.DataFrame({"error": ["Unknown query type"]})

def run_query(nl_query):
    parsed = parser_chain.run(query=nl_query)
    print("ðŸ§© Parsed Intent:\n", parsed)
    try:
        parsed = json.loads(parsed)
    except:
        parsed = {"intent type": parsed}
    results = filter_data(df, current_admin, parsed)
    return results

queries = [
    "Which students havenâ€™t submitted their homework yet?",
    "Show me performance data for Grade 8 from last week.",
    "List all upcoming quizzes scheduled for next week."
]

for q in queries:
    print(f"\nðŸ”¹ Query: {q}")
    display(run_query(q))
